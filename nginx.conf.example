# Nginx反向代理配置示例
# 将此文件复制到 /etc/nginx/sites-available/esports-hotel

upstream backend {
    server localhost:8080;
    keepalive 32;
}

upstream frontend {
    server localhost:8081;
    keepalive 32;
}

